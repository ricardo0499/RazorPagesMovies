@page "{id:int?}"
@model RazorPagesMovies.Models.Movies.DeleteModel

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borrar</h1>

<h3>¿Esta seguro de que desea borrar la película?</h3>
<div>
    <h4>Película</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p>Título</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            <p>Fecha de Estreno</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            <p>Género</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt class="col-sm-2">
            <p>Precio</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Price)
        </dd>
        <dt class="col-sm-2">
            <p>Calificación</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Rating)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Movie.ID" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-page="./Index">Regresar a la lista</a>
    </form>
</div>
